{
    "id": "fulfilorder",
    "description": "Example order fulfilment process",
    "actionHandlers": {
        "start": {
            "type": "endpoint",
            "url": "http://loalhost:3010/handle?orderStatus=CREATED&event=started"
        },
        "checkOrder": {
            "type": "endpoint",
            "url": "http://loalhost:3010/handle?orderStatus=CHECKED&event=orderChecked"
        },
        "capturePayment": {
            "type": "endpoint",
            "url": "http://loalhost:3010/handle?orderStatus=PAYMENT_CAPTURED&event=paymentCaptured"
        },
        "prepareShipment": {
            "type": "endpoint",
            "url": "http://loalhost:3010/handle?orderStatus=SHIPMENT_PREPARED&event=shipmentPrepared"
        },
        "ship": {
            "type": "endpoint",
            "url": "http://loalhost:3010/handle?orderStatus=SHIPPED&event=shipped"
        },
        "error": {
            "type": "endpoint",
            "url": "http://loalhost:3010/handle?orderStatus=ERROR&event=error"
        },
        "done": {
            "type": "endpoint",
            "url": "http://loalhost:3010/handle?orderStatus=COMPLETED&event=done"
        }
    },
    "steps": {
        "nostart": {
            "started": "checkOrder"
        },
        "checkOrder": {
            "orderValid": "invalid"
        },
        "capturePayment": {
            "paymentCaptured": "prepareShipment"
        },
        "prepareShipment": {
            "shipmentPrepared": "ship"
        },
        "ship": {
            "shipped": "done"
        },
        "done": {}
    }
}
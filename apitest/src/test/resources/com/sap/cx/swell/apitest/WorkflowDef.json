{
  "id": "fulfilorder",
  "description": "Example order fulfilment process",
  "actionHandlers": {
    "start": {
      "type": "endpoint",
      "url": "http://localhost:8080/action?status=CREATED&event=started"
    },
    "checkOrder": {
      "type": "endpoint",
      "url": "http://localhost:8080/action?status=CHECKED&event=orderChecked"
    },
    "capturePayment": {
      "type": "endpoint",
      "url": "http://localhost:8080/action?status=PAYMENT_CAPTURED&event=paymentCaptured"
    },
    "prepareShipment": {
      "type": "endpoint",
      "url": "http://localhost:8080/action?status=SHIPMENT_PREPARED&event=shipmentPrepared"
    },
    "ship": {
      "type": "endpoint",
      "url": "http://localhost:8080/action?status=SHIPPED&event=shipped"
    },
    "error": {
      "type": "endpoint",
      "url": "http://localhost:8080/action?status=ERROR&event=error"
    },
    "done": {
      "type": "endpoint",
      "url": "http://localhost:8080/action?status=COMPLETED&event=done"
    }
  },
  "steps": {
    "start": {
      "started": "checkOrder"
    },
    "checkOrder": {
      "orderValid": "capturePayment"
    },
    "capturePayment": {
      "paymentCaptured": "prepareShipment"
    },
    "prepareShipment": {
      "shipmentPrepared": "ship"
    },
    "ship": {
      "shipped": "done"
    }
  }
}